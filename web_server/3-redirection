#!/usr/bin/env bash
# Script to install and configure Nginx to redirect /redirect_me with a 301 Moved Permanently status

# Update package list and install Nginx
sudo apt update -y
sudo apt install nginx -y

# Define the new Nginx configuration
nginx_config="
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Optional: Ensure other paths return 404
    location / {
        try_files \$uri \$uri/ =404;
    }
}
"

# Write the configuration to the Nginx default site file
echo "$nginx_config" | sudo tee /etc/nginx/sites-available/default > /dev/null

# Test the Nginx configuration for syntax errors
if sudo nginx -t; then
    # Reload Nginx to apply the new configuration
    sudo systemctl reload nginx
    echo "Nginx configured and reloaded successfully."
else
    echo "Nginx configuration test failed. Please check the configuration."
fi
